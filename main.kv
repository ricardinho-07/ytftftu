<LoginScreen>:
    name: 'loginscreen'
    md_bg_color: '#E5FCE0'
    MDFloatLayout:
        Image:
            source: 'logo.jpeg'
            size_hint: (0.7, 0.7)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        MDLabel:
            text: 'Entrar'
            text_color: 1, 1, 1, 1
            font_size: dp(23)
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.2, 'center_y': 0.47}
        MDTextFieldRect:
            size_hint: 0.8, None
            height: dp(32)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            hint_text: 'Email'
        MDTextFieldRect:
            size_hint: 0.8, None
            height: dp(32)
            password: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            hint_text: 'Senha'
        
        MDRaisedButton:
            text: 'Login'
            text_color: 0, 0, 0, 1
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint_x: .8
            elevation:0
            on_release: root.manager.current = 'receitas'
    
